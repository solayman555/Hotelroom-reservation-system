    scanf("%d",&NID);
B :
    printf("\n\t1.Single Bed\n\t2.Double Bed\n\tSelect your Room Package: ");
    scanf("%d",&a);
    if(a==1 || a==2)
    {
        printf("\tRoom Package:%d \n",a);
    }
    else
    {
        printf("Invalid input.Try Again...\n");
        goto B;  //line 53
    }
    if(a==1)
    {
        j=300;
    }
    else if(a==2)
    {
        j=500;
    }
C :
    printf("\tSelect Wifi Package (5MBps 10MBps 20 MBps): ");
    scanf("%d",&b);
    if(b==5 || b==10 || b==20)
    {
        printf("\tWifi Package:%d MBps \n",b);
    }
    else
    {
        printf("Invalid input.Try Again...\n");
        goto C;  //line 66
    }
    int n;
    printf("\tHow Many Days You stay : ");
    scanf("%d",&n);
    if(b==5)
    {
        k=200;
    }
    else if(b==10)
    {
        k=500;
    }
    else
    {
        k=1000;
    }

    printf("\n\n");
    char o[]="\t\t# Thanks Your Information..... #";
    printf("\t\t===============================\n");
    int d=strlen(o);
    for(int i=0; i<d; i++)
    {
        printf("%c",o[i]);
        usleep(100000);
    }
    printf("\n\t\t==============================");
    system("cls");
    printf("\n\n\n\n\n\t\t\t\<<<<<<<<<<<<<<<<<<<<<<<<<<\n");
    printf("\t\t\t");
