int payment()
{
    system("cls");
    char name[20];
    int number[15];
    int NID[20];
    int a,b,j,k,c;
    printf("\n\t\t\t=========================\n");
    char check[]="        Check-In     ";
    printf("\t\t\t| ");
    int l=strlen(check);
    for(int i=0; i<l; i++)
    {
        printf("%c",check[i]);
        usleep(100000);
